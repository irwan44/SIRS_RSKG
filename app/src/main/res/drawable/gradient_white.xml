<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!-- Soild digunakan untuk Membentuk Warna Block -->
            <solid
                android:color="#BFD4D9" />
            <!-- Stroke digunakan untuk Membentuk Border/Garis Tepi -->
            <stroke
                android:width="1dp"
                android:color="#B2CED5" />
            <!-- Corners digunakan untuk Membentuk Sudut, semakin besar radius maka akan semakin tumpul sudutnya -->
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>

            <!-- Gradient digunakan untuk Membentuk Warna Gradient, dan itu bisa di bentuk dari 2 atau pun 3 warna. -->
            <gradient
                android:startColor="#B2CED5"
                android:endColor="#ffff"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#BFD4D9" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>