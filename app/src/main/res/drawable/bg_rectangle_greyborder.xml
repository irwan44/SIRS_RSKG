<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparan"></solid>
            <stroke android:color="@color/birufigma" android:width="1dp"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- White Top color -->
    <item
        android:top="3px"
        android:bottom="3px"
        android:right="3px"
        android:left="3px">
        <shape  android:shape="rectangle">
            <solid android:color="@color/transparan"/>
            <stroke android:color="@color/birufigma" android:width="1dp"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>