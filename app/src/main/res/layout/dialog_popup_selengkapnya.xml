<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/transparan"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_rectangle_gradient2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <ImageView
            android:id="@+id/close1"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="309dp"
            android:layout_height="151dp"
            android:padding="0dp"
            android:src="@drawable/vaccine_phases_pana" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="241dp"
                android:layout_height="68dp"
                android:fontFamily="@font/bariol_bold"
                android:text="Buat janji dengan dokter kini dengan mudah dan efisien"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="241dp"
                android:layout_height="39dp"
                android:fontFamily="@font/bariol_bold"
                android:text="Buat janji pemeriksaan medis di Pluit Care, bebas antri tanpa ribet dan praktis."
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bariol_bold"
                android:text="1) Proses Registrasi Cepat"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="241dp"
                android:layout_height="65dp"
                android:fontFamily="@font/bariol_regular"
                android:text='Cukup tunjukan bukti antrian digital ke meja administrasi, lalu kamu siap melakukan pemeriksaan dengan dokter pilihanmu. '
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bariol_bold"
                android:layout_marginTop="10dp"
                android:text="2) Dapatkan Info Secara Real-Time "
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="241dp"
                android:layout_height="65dp"
                android:fontFamily="@font/bariol_regular"
                android:text="Dapatkan konfirmasi dari RS dan info seputar pesanan jadwal pemeriksaan kamu langsung di aplikasi Pluit Care"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>