    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Pencarian Dokter / Poli" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bariol_regular"
            android:text="Menu"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="10sp"
                    android:hapticFeedbackEnabled="true"
                    android:onClick="RegistRS"
                    app:cardCornerRadius="13dp"
                    tools:ignore="MissingConstraints">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_registrs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="RegistRS"
                        android:paddingStart="20sp"
                        android:paddingEnd="20sp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/registrasiklinik"
                        android:tooltipText="Registerasi Klinik">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <TextView
                        android:id="@+id/txt_registrs"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:onClick="RegistRS"
                        android:text="Registrasi \nRS">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="13dp"
                    android:layout_height="104dp">

                </View>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/registrasitelemedika"
                    app:cardCornerRadius="13dp"
                    tools:ignore="MissingConstraints">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingStart="20sp"
                        android:paddingEnd="20sp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/registrasitelemedika"
                        android:tooltipText="Register Telemedical" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:text="Registrasi \nTelemedical">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="13dp"
                    android:layout_height="104dp">

                </View>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="10sp"
                    android:onClick="Antrian"
                    app:cardCornerRadius="13dp"
                    tools:ignore="MissingConstraints">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_antrian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="Antrian"
                        android:paddingStart="20sp"
                        android:paddingTop="5sp"
                        android:paddingEnd="20sp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/daftarantrian_1"
                        android:tooltipText="Daftar Antrian" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:text="Daftar \nAntrian">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="10sp"

                    app:cardCornerRadius="13dp"
                    tools:ignore="MissingConstraints">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_mrpasien"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="MRpasien"
                        android:paddingStart="20sp"
                        android:paddingTop="5sp"
                        android:paddingEnd="20sp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/daftarantrian"
                        android:tooltipText="Riwayar Medis" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:text="Riwayat \nMedis">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="13dp"
                    android:layout_height="104dp">

                </View>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="10sp"
                    android:onClick="profilePasien"
                    app:cardCornerRadius="13dp"
                    tools:ignore="MissingConstraints">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="profilePasien"
                        android:paddingStart="20sp"
                        android:paddingTop="5sp"
                        android:paddingEnd="20sp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/layer_2"
                        android:tooltipText="Informasi Doctor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:text="Profile \nPasien">

                    </TextView>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="13dp"
                    android:layout_height="104dp">

                </View>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="10sp"
                    android:onClick="InfoDMedis"
                    app:cardCornerRadius="13dp"
                    tools:ignore="MissingConstraints">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingStart="13sp"
                        android:paddingTop="5sp"
                        android:paddingEnd="13sp"
                        android:paddingBottom="28sp"
                        android:src="@drawable/infosirs"
                        android:tooltipText="Info SIR-s"
                        app:cardCornerRadius="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/bariol_bold"
                        android:gravity="center"
                        android:text="Info \n SIR-s">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bariol_regular"
            android:text="Pilih Poli"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="RSKITA"
                                android:layout_height="wrap_content">

                            </TextView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="RSKITA"
                                android:layout_height="wrap_content">

                            </TextView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="RSKITA"
                                android:layout_height="wrap_content">

                            </TextView>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>